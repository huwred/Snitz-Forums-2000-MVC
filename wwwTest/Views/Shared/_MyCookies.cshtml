<div class="row-fluid clearfix">
    <div class="panel panel-info">
        <h4>Cookie Values<small>@Html.ActionLink("clear", "ClearCookies","Account", null, new { title = "Clear all cookies. (this will log you out)", data_toggle = "tooltip" })</small></h4>
        <div class="panel-body">
            <dl class="inline">
                @{
                    var cookies = Request.Cookies;
                    
                    for (int i = 0; i < cookies.Count; i++)
                    {
                        var httpCookie = cookies[i];
                        if (httpCookie != null && httpCookie.HasKeys)
                        {
                            <dt>@WebUtility.UrlDecode(httpCookie.Name)</dt>
                            <dd>Domain:@httpCookie.Domain Path:@httpCookie.Path</dd>
                            <dd>
                                <dl>
                                    @foreach (string value in httpCookie.Values)
                                    {
                                        @Html.Raw("<dt>" + value + "</dt><dd><span style='width:60%; word-wrap:break-word; display:inline-block;'>" + httpCookie[value] + "</span></dd>")
                                    }
                                </dl>
                            </dd>

                        }
                        else
                        {
                            if (httpCookie != null && !httpCookie.Name.Contains("ASP"))
                            {
                                <dt>@WebUtility.UrlDecode(httpCookie.Name)</dt>
                                <dd>Domain: @httpCookie.Domain Path: @httpCookie.Path</dd>
                                <dd>Value: @httpCookie.Value</dd>
                            }
                        }

                    }
                }
            </dl>
        </div>
    </div>
</div>
