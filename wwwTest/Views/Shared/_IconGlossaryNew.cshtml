@using SnitzConfig
@using LangResources.Utility
@using SnitzCore.Utility
@using SnitzDataModel.Extensions
@using SnitzDataModel.Models
@{
    var themepath = Common.RootFolder + Config.ThemeFolder();
}
<ul class="topiclist topics icons glossary">

    <li><dl class="icon "><dt class="col-xs-2"><span class="ico_topic_read" style="width: 37px"></span></dt><dd style="padding-top: 12px;"> @ResourceManager.GetLocalisedString("lblOldPosts", "labels")</dd> </dl></li>
    <li>
        <dl class="icon ">
            <dt class="col-xs-2"><span class="ico_topic_unread" style="width: 37px"></span><div class="list-inner"></div> </dt>
            <dd style="padding-top: 12px;">@ResourceManager.GetLocalisedString("lblNewPosts", "labels")</dd>
        </dl>
    </li>
    @if (ClassicConfig.GetIntValue("STRHOTTOPIC") == 1)
    {
        <li><dl class="icon "><dt class="col-xs-2"><span class="ico_topic_read_hot" style="width: 37px"></span></dt><dd style="padding-top: 12px;"> @String.Format(ResourceManager.GetLocalisedString("lblHotTopic", "labels"), ClassicConfig.GetIntValue("INTHOTTOPICNUM"))</dd> </dl></li>
    }

    <li>
        <dl class="icon ">
            <dt class="col-xs-2"><span class="ico_topic_read_locked" style="width: 37px"></span> </dt>
            <dd style="padding-top: 12px;">@ResourceManager.GetLocalisedString("lblLockedTopic", "labels")</dd>
        </dl>
    </li>
    <li><dl class="icon "><dt class="col-xs-2"><span class="ico_sticky_read" style="width: 37px"></span> </dt><dd style="padding-top: 12px;">@ResourceManager.GetLocalisedString("StickyTopics", "labels")</dd> </dl></li>
    @if (User.IsAdministrator() || User.IsModerator())
    {
        <li><dl class="icon "><dt class="col-xs-2"><span class="ico_topic_unmoderated" style="width: 37px"></span></dt><dd style="padding-top: 12px;"> @ResourceManager.GetLocalisedString("tipTopicUnmoderatedReplies", "Tooltip") </dd> </dl></li>
        <li><dl class="icon "><dt class="col-xs-2"><span class="ico_topic_onhold" style="width: 37px"></span></dt><dd style="padding-top: 12px;"> @ResourceManager.GetLocalisedString("tipTopicOnHold", "Tooltip") </dd> </dl></li>
    }
    @if (ClassicConfig.GetIntValue("INTPOLLS",0) == 1 && Forum.Query("WHERE F_POLLS>0").Any())
    {
        <li>
            <dl class="icon ">
                <dt class="col-xs-2"><span class="ico_topic_poll" style="width: 37px"></span> </dt>
                <dd style="padding-top: 12px;">@ResourceManager.GetLocalisedString("lblPollTopic", "labels")</dd>
            </dl>
        </li>
    }
    @if (ClassicConfig.GetIntValue("INTCALEVENTS",0) == 1 && Forum.Query("WHERE F_ALLOWEVENTS>0").Any())
    {
        <li>
            <dl class="icon ">
                <dt class="col-xs-2"><span class="ico_topic_event" style="width: 37px"></span> </dt>
                <dd style="padding-top: 12px;">@ResourceManager.GetLocalisedString("lblEventTopic", "labels")</dd>
            </dl>
        </li>
    }
</ul>


