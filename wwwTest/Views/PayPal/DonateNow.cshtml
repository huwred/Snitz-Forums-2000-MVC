
@model SiteManage.Models.PayPalProduct
@{
    Layout = null;
}

@using (Html.BeginForm("ValidateCommand", "PayPal",null,
                       FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-paypal">
        <div class="panel-heading"><i class="fa fa-1_5x fa-paypal"></i> @Model.Name</div>
        <div class="panel-body">
            <div class="formgroup clearfix">
                @Model.Description
            </div>
            <div class="formgroup clearfix">
                <input type="hidden" name="product" value="donation">
                <label class="control-label col-xs-4">Amount</label>
                <div class="col-xs-6">@Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })</div>
                <div class="control-label col-xs-2">@Model.Currency</div>
            </div>
        </div>
        <div class="panel-footer text-center">
            <input type="image" src="https://www.paypalobjects.com/en_US/GB/i/btn/btn_donateCC_LG.gif" name="submit" alt="PayPal – The safer, easier way to pay online!">
            <img alt="" src="https://www.paypalobjects.com/en_GB/i/scr/pixel.gif" width="1" height="1">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.Mode)
            @Html.HiddenFor(model => model.Currency)
        </div>
    </div>
}