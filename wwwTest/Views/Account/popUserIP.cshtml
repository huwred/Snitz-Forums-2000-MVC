@using SnitzConfig
@{
    string hostname = ViewBag.HostName;
    string ip = ViewBag.IPAddress;
}
<div class="controls">
    IP Address: @ip<br />
    Host: @hostname
</div>
@if (!String.IsNullOrWhiteSpace(ClassicConfig.GetValue("STRIPLOOKUP")))
{
    <a href="@ClassicConfig.GetValue("STRIPLOOKUP").Replace("[IP]", ip)" target="_new">Third party lookup</a>
}