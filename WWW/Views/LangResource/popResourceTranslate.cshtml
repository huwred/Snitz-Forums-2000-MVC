@using LangResources.Utility
@model WWW.ViewModels.ResTranslateViewModel

@{ Layout = null;}

<div id="resourceTranslator">

        <div class="modal-header">
            <button type="button" class="btn close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
            <h4 class="modal-title" id="myModalLabel">Translate</h4>
        </div>
        <div class="modal-body clearfix">
            <div class="container-fluid ">
                
                <div class="form-group">
                    <label class="col-xs-3">From</label>
                    <div class="col-xs-3"><input class="form-control" type="text" name="FromLang" id="FromLang" value="@Model.FromLang"></div>
                    <label class="col-xs-2">To</label>
                    <div class="col-xs-3"><input class="form-control" type="text" name="ToLang" id="ToLang" value="@Model.ToLang"></div>
                    
                </div>
                <div class="form-group">
                    <label class="col-xs-3">Text</label>
                    <div class="col-xs-8"><input class="form-control" type="text" name="Value" id="TransText" value="@Model.Value"></div>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" id="TranslateRes" ><i class="fa fa-flag"></i> Translate</button>
                </div>
                <div class="form-group">
                    <label class="col-xs-3">Translation</label>
                    <div id="loading" class="col-xs-8 centered" style="display:none"><i class="fa fa-spinner fa-2x fa-spin"  id="spinWait"></i></div>
                    <div id="txt-translate" class="col-xs-8"><input class="form-control" type="text" name="Translated" id="TranslatedText" value="@Model.Translated">
                     <p class="help-block">translated by http://www.transltr.org/api</p>
   
                    </div>
                    
                </div>                
                <p>&nbsp;</p>
                <p class="pull-right flip">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> @ResourceManager.GetLocalisedString("btnCancel", "labels")</button>
                    <button type="button" class="btn btn-primary" id="submitResTranslate" data-id="@Model.ResId" data-val="@Model.Translated"><i class="fa fa-check"></i> Update</button>
                    
                </p>
            </div>
        </div>


</div>
