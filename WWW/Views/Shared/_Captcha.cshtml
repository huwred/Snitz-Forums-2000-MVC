@using LangResources.Utility
@using SnitzConfig
@using WWW.Views.Helpers


<fieldset class="form-signin" id="captcha-check">
    <legend>@ResourceManager.GetLocalisedString("CaptchaLegend", "General")</legend>
    <p>
        @ResourceManager.GetLocalisedString("CaptchaDesc","General")
    </p>
    <div id="div-captcha">
            <div class="form-group">
                <a href="#" title="Click to refresh"><img alt="Captcha" src="@Html.Action("CaptchaImage","Account")" style="" /></a>
            </div>
        <div class="form-group">
            <input type="text" name="Captcha" id="Captcha" class="form-control" placeholder="Answer" />
        </div>
    </div>
    <p>&nbsp;</p>
    <div class="pull-right flip">
        <a href="#" class="btn btn-primary btn-captcha" id="btn-captcha">Not a Robot</a>
    </div>
</fieldset>
