@using Snitz.Base
@using WWW.Views.Helpers
@model WWW.ViewModels.AdminModeratorsViewModel

<div class="col-sm-10">
    @if (ViewBag.Moderation != null)
    {
        @Html.DisplayNameForEnum((Enumerators.Moderation)ViewBag.Moderation)
    }
    
    <div class="form-group clearfix">
        <label class="control-label col-xs-6">Available Moderators</label><label class="control-label">Forum Moderators</label>
        @Html.ListBoxFor(x => x.ForumModerators, new MultiSelectList(ViewBag.Moderators, "Key", "Value", Model.ForumModerators), new {@class = "form-control mod-select multiselect"})
    </div>
    <div class="form-group">
        <input type="checkbox" class="checkbox-inline" id="select_all"/> Select/Un-select All
    </div>
    @Html.HiddenFor(x => x.ForumId)
    <button class="btn btn-success" type="reset">Reset</button>
    <input type="submit" value="Save changes" class="btn btn-sm btn-primary"/>

</div>
<div class="col-sm-1"></div>
