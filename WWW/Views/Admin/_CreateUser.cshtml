@using LangResources.Utility
@model WWW.ViewModels.AdminCreateUserViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times; </button>
    <h4 class="modal-title">Create user account</h4>
</div>
@using(Ajax.BeginForm("CreateUser","Admin",null,
        new AjaxOptions
        {
            OnSuccess = "OnSuccess",
            OnFailure = "OnFailure",
            UpdateTargetId = "info-panel",
            HttpMethod = "POST",
            LoadingElementId = "loading"
        }, new { @class = "form-horizontal",id= "createForm" }))
{
    <div class="modal-body">
        <div class="tab-content row-fluid clearfix">           
            <div class="form-group">
                <label for="Username" class="control-label col-xs-5">Username:</label>
                <div class="col-xs-6">
                    <input id="Username" type="text" name="Username" value="" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="control-label col-xs-5">Email:</label>
                <div class="col-xs-6">
                    <input id="Email" type="text" name="Email" value="" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label col-xs-5">Password:</label>
                <div class="col-xs-6">
                    <input id="Password" type="password" name="Password" value="" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="Confirm" class="control-label col-xs-5">Confirm Password:</label>
                <div class="col-xs-6">
                    <input id="Confirm" type="password" name="Confirm" value="" class="form-control"/>
                </div>
            </div>
        </div>
        <div id="resultDiv"></div> 
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">@ResourceManager.GetLocalisedString("btnCancel", "labels")</button>
    <button type="button" id="approve-user-btn" class="btn btn-success">Create</button>
</div>    
}
